{
  "name": "als-unhooked",
  "version": "0.0.2",
  "description": "cls-hooked replacement using modern context tracking",
  "main": "./lib/index.js",
  "type": "module",
  "files": [
    "lib/*"
  ],
  "exports": {
    ".": "./lib/index.js",
    "./no-global": "./lib/als.js",
    "./legacy": "./lib/legacy.js"
  },
  "scripts": {
    "----------------- BUILD ------------------------------------": "",
		"build": "npm-run-all build:*",
		"build:build": "tsc",
		"build:fix": "eslint ./lib --fix",
    "----------------- TESTS ------------------------------------": "",
    "test": "npm-run-all test:*",
    "test:pre": "npm run build",
    "test:mocha": "mocha test/*.js",
    "test:mocha:legacy": "mocha test/legacy/*.js",
    "test:tap": "tap test/tap/*.tap.js",
    "----------------- UTIL -------------------------------------": "",
    "debug": "node --nolazy --debug-brk=5858 ",
    "lint": "eslint .",
    "prepublish": "eslint . --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zxanderh/als-unhooked.git"
  },
  "keywords": [
    "threading",
    "shared",
    "context",
    "cls-hooked",
    "AsyncLocalStorage"
  ],
  "author": {
    "name": "zxanderh"
  },
  "license": "BSD-2-Clause",
  "engineStrict": false,
  "engines": {
    "node": ">=20 || >=19.8.0 || >=18.16.0"
  },
  "dependencies": {
    "debug": "^4.4.0"
  },
  "optionalDependencies": {
    "emitter-listener": "^1.1.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.20.0",
    "@types/chai": "^5.0.1",
    "@types/debug": "^4.1.12",
    "@types/superagent": "^8.1.9",
    "chai": "^5.2.0",
    "eslint": "^9.20.1",
    "eslint-plugin-mocha": "^10.5.0",
    "globals": "^15.15.0",
    "mocha": "^11.1.0",
    "npm-run-all": "^4.1.5",
    "semver": "^7.7.1",
    "sinon": "^19.0.2",
    "sinon-chai": "^4.0.0",
    "superagent": "^10.1.1",
    "tap": "^21.1.0",
    "typescript": "^5.7.3"
  },
  "directories": {
    "test": "test"
  },
  "bugs": {
    "url": "https://github.com/zxanderh/als-unhooked/issues"
  },
  "homepage": "https://github.com/zxanderh/als-unhooked#readme",
  "typings": "./lib/index.d.ts"
}
